@{
    Layout = "_Layout";
}
<div id="page-sidebar" class="rm-transition d-block">
    <div id="page-sidebar-wrapper">
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a href="@Url.Action("Users", "Role")" title="Job leads">
                        <span>Users </span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Role")" title="Active Jobs">
                        <span>Roles</span>
                    </a>
                </li>
            </ul>
        </div>
    </div><!-- #page-sidebar-wrapper -->
</div><!-- #page-sidebar -->
<div id="page-content-wrapper" class="rm-transition">

    <div id="page-content">
        <div class="page-box">

            @if (ViewBag.Title != null)

            {
                <h3 class="page-title">
                    @ViewBag.Title
                    <small>
                        @ViewBag.TitleDesc
                    </small>
                </h3>
            }

            @RenderBody()
        </div>
    </div><!-- #page-content -->
    <div class="loading-overlay">
        <div id="loading-img"></div>
    </div>
</div><!-- #page-content-wrapper -->
@section scripts
{
    @RenderSection("scripts", required: false)
}